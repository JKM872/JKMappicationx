# Server Configuration
PORT=3001
NODE_ENV=development

# Google AI API
GOOGLE_AI_KEY=your_google_ai_api_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraper Configuration
SCRAPER_DELAY_MS=1000
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Twitter/X Credentials (for twikit - optional)
# Create a Twitter account and use these credentials
# Leave empty to use Nitter/mock data fallback
TWITTER_USERNAME=
TWITTER_EMAIL=
TWITTER_PASSWORD=

# Redis Configuration (optional - uses memory cache if not configured)
REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=86400

