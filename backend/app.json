{
  "name": "Viral Content Hunter API",
  "description": "AI-powered tool for finding viral social media content",
  "repository": "https://github.com/yourusername/viral-content-hunter",
  "logo": "https://node-js-sample.herokuapp.com/node.svg",
  "keywords": ["node", "express", "typescript", "ai", "social-media"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment (production)",
      "value": "production",
      "required": true
    },
    "GOOGLE_AI_KEY": {
      "description": "Google AI API key from makersuite.google.com",
      "required": true
    },
    "SUPABASE_URL": {
      "description": "Supabase project URL",
      "required": true
    },
    "SUPABASE_KEY": {
      "description": "Supabase API key (anon public key)",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": []
}
